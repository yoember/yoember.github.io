source "https://rubygems.org"

gem 'octopress'
gem 'jekyll'

# Asset pipelines for Jekyll
gem 'jekyll-assets'
gem 'uglifier'
gem 'sass'

# Add bootstrap and font awesome
gem 'bootstrap-sass'
gem 'font-awesome-sass'

# Generate sitemap
gem 'jekyll-sitemap'

# Livereload
gem 'guard'
gem 'guard-livereload'
gem 'guard-jekyll-plus'

# Foreman to launch two processes together
gem 'foreman'

# Debugger
gem 'octopress-debugger'
